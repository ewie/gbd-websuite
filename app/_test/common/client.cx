assets.dir "/common/assets"

client.elements [
    { tag "Infobar.ZoomOut" }
    { tag "Infobar.ZoomIn" }
    { tag "Infobar.ZoomReset" }
    { tag "Infobar.Position" }
    { tag "Infobar.Scale" }
    { tag "Infobar.Loader" }
    { tag "Infobar.Spacer" }
    { tag "Infobar.HomeLink" }
    { tag "Infobar.Help" }
    { tag "Infobar.About" }
    { tag "Toolbar.Identify.Click" }
    { tag "Toolbar.Print" }
    { tag "Toolbar.Snapshot" }
    { tag "Sidebar.Overview" }
    { tag "Sidebar.Layers" }
]

client.options {
    infobarVisible true
    sidebarActiveTab "Sidebar.Layers"
