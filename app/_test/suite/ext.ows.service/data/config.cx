@include /common/util.cx

@WEB_SERVER_ONLY
@POSTGRES_CONFIG
@DEFAULT_WEB_SITE

access+ { role "all" type "allow" }

api.actions+ { type "map" }
api.actions+ { type "search" }
api.actions+ { type "asset" }
api.actions+ { type "project" }




projects+ {
    uid "wms1"

    meta {
        @META_DATA "PROJECT"
    }

    api.actions+ {
        type "ows"
        services.0 {
            type "wms"
            meta {
                @META_DATA "service"
                abstract null
                accessConstraints null
            }
        }
    }

    map.crs "EPSG:3857"

    map.layers+ {
        title "paris_3857"
        type "postgres"
        display "box"
        table.name "paris_3857"
        meta {
            @META_DATA "PARIS"
        }
        featureFormat.label {
            type "html"
            text "{id}"
        }
        style {
            type "css"
            text """
                fill: rgba(0,0,255,0.5);
                label-font-size: 13px;
                label-fill: cyan;
                label-background: black;
                label-offset-x: 10px;
                label-offset-y: -10px;
            """
        }
    }

    map.layers+ {
        title "dus_25832"
        type "postgres"
        display "box"
        table.name "dus_25832"
        featureFormat.label {
            type "html"
            text "{id}"
        }
        style {
            type "css"
            text """
                fill: rgba(255,0,0,0.5);
                label-font-size: 13px;
                label-fill: yellow;
                label-background: black;
            """
        }
    }

    @include /common/client.cx
}

